{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist/",
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ],
  "include": ["src"]
}